    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp">

            <ToggleButton
                android:id="@+id/toggle_sun"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textOff="일"
                android:textOn="일"
                android:background="@drawable/togglebtn_color"
                />

            <ToggleButton
                android:id="@+id/toggle_mon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textOff="월"
                android:textOn="월"
                android:background="@drawable/togglebtn_color"
                />

            <ToggleButton
                android:id="@+id/toggle_tue"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textOff="화"
                android:textOn="화"
                android:background="@drawable/togglebtn_color"/>

            <ToggleButton
                android:id="@+id/toggle_wed"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textOff="수"
                android:textOn="수"
                android:background="@drawable/togglebtn_color"/>

            <ToggleButton
                android:id="@+id/toggle_thu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textOff="목"
                android:textOn="목"
                android:background="@drawable/togglebtn_color"/>

            <ToggleButton
                android:id="@+id/toggle_fri"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textOff="금"
                android:textOn="금"
                android:background="@drawable/togglebtn_color"/>

            <ToggleButton
                android:id="@+id/toggle_sat"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textOff="토"
                android:textOn="토"
                android:background="@drawable/togglebtn_color"/>
        </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
